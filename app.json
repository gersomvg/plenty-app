{
    "expo": {
        "name": "Plenty",
        "icon": "./src/assets/branding/app-logo.png",
        "version": "1.0.1",
        "slug": "plenty",
        "sdkVersion": "28.0.0",
        "splash": {
            "image": "./src/assets/branding/splash-screen.png"
        },
        "orientation": "portrait",
        "ios": {
            "bundleIdentifier": "nl.plentyapp.plenty",
            "infoPlist": {
                "NSCameraUsageDescription":
                    "This app uses the camera to scan barcodes of products.",
                "NSPhotoLibraryUsageDescription":
                    "This app uses you photo library, so you can change product images."
            }
        },
        "android": {
            "package": "nl.plentyapp.plenty"
        },
        "androidStatusBar": {
            "barStyle": "dark-content",
            "backgroundColor": "#FFFFFF"
        },
        "privacy": "unlisted",
        "updates": {
            "enabled": true
        }
    }
}
