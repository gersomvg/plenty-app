{
    "expo": {
        "name": "Plenty",
        "icon": "./src/assets/branding/app-logo.png",
        "version": "1.2.0",
        "slug": "plenty",
        "sdkVersion": "28.0.0",
        "splash": {
            "image": "./src/assets/branding/splash-screen.png"
        },
        "orientation": "portrait",
        "primaryColor": "#FB5758",
        "ios": {
            "bundleIdentifier": "nl.plentyapp.plenty",
            "buildNumber": "1.2.0",
            "infoPlist": {
                "NSCameraUsageDescription":
                    "This app uses the camera to scan barcodes of products.",
                "NSPhotoLibraryUsageDescription":
                    "This app uses your photo library, so admins can change product images."
            }
        },
        "android": {
            "package": "nl.plentyapp.plenty",
            "versionCode": 120,
            "permissions": [
                "CAMERA",
                "MANAGE_DOCUMENTS",
                "READ_EXTERNAL_STORAGE",
                "READ_INTERNAL_STORAGE",
                "WRITE_EXTERNAL_STORAGE"
            ]
        },
        "androidStatusBar": {
            "barStyle": "dark-content",
            "backgroundColor": "#FFFFFF"
        },
        "privacy": "unlisted",
        "updates": {
            "enabled": true
        }
    }
}
